{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "files": {
    "includes": ["app/**", "scripts/**", "tests/**", "types/**", "data/**", "*.ts", "*.json"]
  },
  "formatter": { "enabled": true },
  "linter": { "enabled": true },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [":NODE:", ":PACKAGE:", ":ALIAS:", ":PATH:"]
          }
        }
      }
    }
  },
  "css": { "parser": { "tailwindDirectives": true } }
}
